<%= form_for @topic, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :topic_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :topic_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :topic_content, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :topic_content, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :topic_author, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :topic_author, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                topics_path, :class => 'btn' %>
  </div>
<% end %>
